{
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "lib": [
        "dom",
        "dom.iterable",
        "es2017",
        "es2017.object"
      ],
      "allowJs": true,
      "jsx": "react",
      "sourceMap": false,
      "removeComments": true,
      "strict": true,
      "noImplicitAny": true,
      "alwaysStrict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "noEmit": true,
      "noEmitOnError": true,
      "moduleResolution": "node",
      "baseUrl": "./src",
      "paths": {
        "@api/*": ["api/*"],
        "@api": ["api"],
        "@components/*": ["components/UI/*"],
        "@components": ["components/UI"],
        "@constants/*": ["constants/*"],
        "@constants": ["constants"],
        "@core/*": ["components/__core__/*"],
        "@core": ["components/__core__"],
        "@libs/*": ["libs/*"],
        "@libs": ["libs"],
        "@redux/*": ["redux/*"],
        "api/*": ["api/*"],
        "components/*": ["components/*"],
        "constants/*": ["constants/*"],
        "core/*": ["core/*"],
        "libs/*": ["libs/*"],
        "redux/*": ["redux/*"]
      },
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "suppressImplicitAnyIndexErrors": true,
      "skipLibCheck": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": [
      "node_modules",
      "config",
      "src/__tests__",
      "src/**/story.*",
      "src/**/example.*"
    ]
  }